<Window x:Class="Vapor.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vapor"
        mc:Ignorable="d"
        Title="Start" Height="450" Width="800">
    <Grid Background="#FF1D1D1D">
        <Grid.ColumnDefinitions> 
            <ColumnDefinition Width="401*"/> 
            <ColumnDefinition Width="289*"/> 
            <ColumnDefinition Width="110*"/> 
        </Grid.ColumnDefinitions> 
        <Label x:Name="labelUsername" Content="User" Margin="0,10,10,0" Background="#FF1B1B1B" Foreground="White" FontSize="14" HorizontalAlignment="Right" Width="59" Height="37" VerticalAlignment="Top" RenderTransformOrigin="0.763,0.515" Grid.Column="2"/> 
        <Canvas Margin="-75,78,75,-79" Grid.ColumnSpan="3"> 
            <Polygon Points="100,0 200, 50 200, 150 100, 200 0, 150 0, 50" StrokeThickness="1" Stroke="White" Canvas.Left="82" Canvas.Top="-70" Height="196" Width="222" > 
                <Polygon.Fill>  
                    <ImageBrush ImageSource="/dota2_social.jpg"/>  
                </Polygon.Fill>  
            </Polygon>  
            <Polygon Points="100,0 200, 50 200, 150 100, 200 0, 150 0, 50"  StrokeThickness="1" Stroke="White" Canvas.Left="140" Canvas.Top="120" Height="175" Width="249" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" > 
                <Polygon.RenderTransform>  
                    <TransformGroup>  
                        <ScaleTransform/>
                        <SkewTransform AngleX="0.982"/>
                        <RotateTransform/>
                        <TranslateTransform X="1.483"/>
                    </TransformGroup>  
                </Polygon.RenderTransform>  
                <Polygon.Fill>  
                    <ImageBrush ImageSource="/GU1vXFJpbzGYNV6UN3U0Cnnb.jpg" Stretch="Fill"/>  
                </Polygon.Fill>  
            </Polygon>  
            <Polygon Points="100,0 200, 50 200, 150 100, 200 0, 150 0, 50"  StrokeThickness="1" Stroke="White" Canvas.Left="347" Canvas.Top="122" Height="191" Width="273" HorizontalAlignment="Left" VerticalAlignment="Top" > 
                <Polygon.Fill>  
                    <ImageBrush ImageSource="/Spongbob game.jpg"/>  
                </Polygon.Fill>  
            </Polygon> 
        </Canvas> 
        <Polygon Points="100,0 200, 50 200, 150 100, 200 0, 150 0, 50"  StrokeThickness="1" Stroke="White" Margin="87,0,0,43" Grid.ColumnSpan="2" Grid.Column="1" HorizontalAlignment="Left" Width="272" Height="191" VerticalAlignment="Bottom" > 
            <Polygon.Fill> 
                <ImageBrush ImageSource="/Client_Blog_Header_v2.jpg"/>  
            </Polygon.Fill> 
        </Polygon> 
        <Polygon Points="100,0 200, 50 200, 150 100, 200 0, 150 0, 50"  StrokeThickness="1" Stroke="White" Margin="0,23,41,0" Grid.ColumnSpan="2" HorizontalAlignment="Right" Width="273" Height="191" VerticalAlignment="Top" > 
            <Polygon.Fill> 
                <ImageBrush ImageSource="/valorant-logo-FAB2CA0E55-seeklogo.com.png"/>  
            </Polygon.Fill> 
        </Polygon> 
        <Polygon Points="100,0 200, 50 200, 150 100, 200 0, 150 0, 50"  StrokeThickness="1" Stroke="White" Margin="169,26,271,217" Grid.ColumnSpan="2" > 
            <Polygon.Fill> 
                <ImageBrush ImageSource="/capsule_616x353.jpg"/>  
            </Polygon.Fill> 
        </Polygon> 
    </Grid>
</Window>

